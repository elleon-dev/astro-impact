    "lodash": "^4.17.21",
    "long": "5.2.3",
    "moment": "^2.30.1",
    "moment-timezone": "^0.5.46",
    "mustache": "^4.2.0",
    "nodemailer": "^6.9.15",
    "normalize-text": "^2.5.0",
    "titleize": "^4.0.0"
