{
  "hosting": [
    {
      "public": "apps/web-client/dist",
      "target": "app",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "predeploy": [
        "yarn hosting build"
      ],
      "headers": [
        {
          "source": "/index.html",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "no-cache"
            }
          ]
        },
        {
          "source": "/static/**/*.@(css|js)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "public, max-age=31536000000, s-maxage=31536000000"
            }
          ]
        }
      ],
      "redirects": [],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    {
      "target": "api",
      "rewrites": [
        {
          "source": "/**",
          "function": "api"
        }
      ],
      "headers": []
    }
  ],
  "firestore": {
    "indexes": "firestore.indexes.json",
    "rules": "firestore.rules"
  },
  "functions": {
    "predeploy": ["yarn functions build"],
    "source": "apps/functions"
  }
}
